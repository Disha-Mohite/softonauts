<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/orange_light"
    tools:context=".NavigatorDetailsTwoActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/orange">


    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Navigator Details"
        android:textStyle="bold"
        android:background="@color/white"
        android:textColor="@color/orange_dark"
        android:textSize="15sp"
        android:padding="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/back_navigator"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="fitXY"
            android:layout_margin="5dp"
            android:background="@mipmap/ic_person"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/pnamenv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="John Anderson"
                android:textColor="@color/black_light"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/padrsnv"
                android:text="Southfield, 48054"
                android:textColor="@color/black_light"
                android:textSize="14sp"
                android:textStyle="bold"
                android:padding="5dp"/>

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Appointment Type"
        android:padding="5dp"
        android:textColor="@color/black_light"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="15dp"/>

    <EditText
        android:id="@+id/appointype"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_back_layout"
        android:drawablePadding="5dp"
        android:textColor="@color/black_light"
        android:hint="Appointment Type"
        android:inputType="text"
        android:maxLines="1"
        android:textSize="15sp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="15dp"
        android:padding="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "Date and Time"
        android:padding="5dp"
        android:textColor="@color/black_light"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"/>


    <TextView
        android:id="@+id/timedat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "12 Jul 4 PM"
        android:padding="5dp"
        android:textColor="@color/orange_dark"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="15dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sublit"
        android:background="@color/orange"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textColor="@color/white"
        android:text="Book Appointment"
        android:textStyle="bold"/>
</LinearLayout>